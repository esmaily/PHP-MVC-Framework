<div class = "def-section-header col-md-12 col-sm-12">
    <h4 class = "title">تماس با ما </h4>
</div>
<div class = "content col-md-12 col-sm-12">
    <div class = "row">
        <div class = "col-md-10">
            <form action = "" name = "contact-us" class = "form-contact">
                <div class = "form-row">
                    <div class = "col">
                        <input type = "text" name = "name" class = "form-control"
                               placeholder = "نام شما ---">
                    </div>
                    <div class = "col">
                        <input type = "email" name = "email" class = "form-control"
                               placeholder = "ایمیل شما ---">
                    </div>
                </div>

                <div class = "form-group">
                                <textarea class = "form-control" name = "message" id = "message" cols = "20"
                                          rows = "6"></textarea>
                </div>
                <!--<br>-->
                <div class = "form-group">
                    <button type = "submit" class = "btn btn-outline-primary">ارسال</button>
                </div>
            </form>
        </div>
    </div>
</div>